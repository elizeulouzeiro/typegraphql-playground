{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2018",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*/index",
                "src/*"
            ]
        }
    },
    "lib": [
        "es2018",
        "esnext.asynciterable"
    ],
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}